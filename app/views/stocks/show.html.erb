<header>
  <div id="header-container">
    <div id="user-title" class="title"><%= @stock.company_name%></div>
    <div id="button-container-right">
      <div id="button-edit">
        <%= link_to "Stock List", user_path(session[:user_id]), :class => 'prof' %>
      </div>
      <div id="button-edit">
      <%= link_to "Add Stock", new_user_stock_path(params[:user_id], params[:id]), :class => 'stocklink'%>
      </div>
    </div>
  </div>
</header>
<div id="name-container" class="name-container">
<div class="company-title"><%= @stock.company_name %> (<%= @stock.ticker %>)</div>
</div>
<%= @stock.market_news %>

<div id="real-time-price" class="real-time-price">
$<%= @stock.live_price %>
</div>

<table class="stocktable", id="stocktable">

  <tbody>
  <tr>
      <td>Open Price</td>
      <td>$<%=@stock.open_price%></td>
    </tr>
    <tr>
      <td>Dividend Date</td>
      <td><%=@stock.dividends_date%></td>
    </tr>
    <tr>
      <td>Dividend Amount</td>
      <td><%=@stock.dividends_given%></td>
    </tr>


    <tr>
      <td>52 Week High</td>
      <td>$<%= @stock.year_high%></td>
    </tr>
  </tbody>
</table>



<div id="news" class="news">
<h2>Latest News</h2>
<a href="<%= @stock.news_url%>"><%= @stock.latest_news %></a>
<div>
