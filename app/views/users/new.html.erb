<%= form_for @user, url: {action: "create"}, html: {class: "nifty_form"} do |f| %>
    
    <div class="username">
    <%= f.label :username%><br>
  <%= f.text_field :username %>
  </div>
  
  <div class="email">
  <%=f.label :email%><br>
  <%= f.text_field :email %>
  </div>
  <div class="phonenumber">
  <%= f.label :phone_number%><br>
  <%= f.text_field :phone_number %>
  </div>
  <div class="password">
  <%=f.label :password%><br>
  <%= f.password_field :password %>
  </div>
  

<div class="button">
  <%= f.submit "Join" %>
  </div>
<% end %>